<!-- Ana sayfa. Slider ve hizmetleri gösterir. -->
<!-- Bu sayfa uygulamanın ana sayfasıdır. Hizmetler ve öne çıkan berberler listelenir. -->
@{
    ViewData["Title"] = "Ana Sayfa";
    var services = ViewBag.Services as List<BerberRandevuSistemi.Models.Service> ?? new List<BerberRandevuSistemi.Models.Service>();
    var featuredBarbers = ViewBag.FeaturedBarbers as List<BerberRandevuSistemi.Models.Barber> ?? new List<BerberRandevuSistemi.Models.Barber>();
}

<!-- Hero Section with Background Image -->
<section class="hero-section-with-bg text-center">
    <div class="hero-overlay">
        <div class="container">
            <div class="hero-content">
                <h1 class="display-3 fw-bold mb-4 hero-title">Premium Berber Hizmetleri</h1>
                <p class="lead mb-5 hero-subtitle">Profesyonel berber ekibimiz ve kaliteli hizmetlerimizle kendinize zaman ayırın</p>
                <a asp-action="BookAppointment" class="btn btn-primary btn-lg hero-cta">
                    <i class="bi bi-calendar-check me-2"></i>Hemen Randevu Al
                </a>
            </div>
        </div>
    </div>
</section>

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Services Section -->
    <section id="services" class="services-section mb-5 mt-5">
        <h2 class="text-center mb-5">
            <span class="text-gold">
                <i class="bi bi-list-check me-2"></i>Hizmetlerimiz
            </span>
        </h2>
        @if (services.Any())
        {
            <div class="row g-4">
                @foreach (var service in services)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card service-card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <div class="service-icon mb-3">
                                    <i class="bi bi-scissors"></i>
                                </div>
                                <h5 class="card-title">@service.ServiceName</h5>
                                <p class="card-text flex-grow-1">@(string.IsNullOrEmpty(service.Description) ? "Profesyonel hizmet" : service.Description)</p>
                                <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top border-secondary">
                                    <span class="text-gold fw-bold" style="font-size: 1.5rem;">@service.Price.ToString("N2") ₺</span>
                                    <span class="badge bg-primary">
                                        <i class="bi bi-clock me-1"></i>@service.DurationMinutes dk
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>Henüz hizmet eklenmemiş.
            </div>
        }
    </section>
</div>
