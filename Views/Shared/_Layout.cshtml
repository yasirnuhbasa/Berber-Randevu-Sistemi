<!-- Bu dosya genel sayfa düzenini (layout) tanımlar. Navbar ve Footer burada bulunur. -->
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Premium Berber</title>
    
    <!-- Bootstrap 5 CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-scissors me-2"></i>
                    <span class="brand-text">Premium Berber</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center gap-3">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#services">
                                <i class="bi bi-list-check me-1"></i>Hizmetler
                            </a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="fw-bold text-white">@User.Identity.Name</span>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-sm btn-outline-danger" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock me-1"></i>Panel
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="MyAppointments">Randevularım</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile" title="Profilim">
                                    <i class="bi bi-person-circle"></i>
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout" title="Çıkış Yap">
                                    <i class="bi bi-box-arrow-right"></i>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-warning text-dark fw-bold px-3" asp-area="" asp-controller="Home" asp-action="BookAppointment">
                                    Randevu Al
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-gold px-3" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-warning text-dark fw-bold px-3" asp-area="" asp-controller="Home" asp-action="BookAppointment">
                                    <i class="bi bi-calendar-check me-1"></i>Randevu Al
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row py-4 align-items-start">
                <!-- Column 1: Brand & Social -->
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5 class="footer-brand mb-3">
                        <i class="bi bi-scissors me-2"></i>Premium Berber
                    </h5>
                    <p class="footer-text">
                        Profesyonel berber hizmetleri ile kendinize zaman ayırın. 
                        Kaliteli hizmet, modern tasarım ve müşteri memnuniyeti bizim önceliğimiz.
                    </p>
                    <div class="mt-3 social-links">
                        <a href="#" class="social-link" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="Twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>

                <!-- Column 2: Links -->
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h6 class="footer-heading mb-3">Hızlı Linkler</h6>
                    <ul class="footer-links list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a href="#services">Hizmetler</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="BookAppointment">Randevu Al</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a asp-area="" asp-controller="Admin" asp-action="Index">Yönetim</a></li>
                        }
                    </ul>
                </div>

                <!-- Column 3: Contact Text -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h6 class="footer-heading mb-3">İletişim</h6>
                    <ul class="footer-links list-unstyled">
                        <li><i class="bi bi-telephone me-2"></i>+90 (212) 555 10 20</li>
                        <li><i class="bi bi-envelope me-2"></i>info@premiumberber.com</li>
                        <li>
                            <i class="fas fa-map-marker-alt me-2 text-warning"></i>
                            <span class="text-white-50">İnegöl İşletme Fakültesi, Cerrah Yolu, İnegöl / Bursa</span>
                        </li>
                    </ul>
                </div>

                <!-- Column 4: Map Location -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="footer-heading mb-3">Konum</h6>
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3056.554628174786!2d29.49397737651664!3d40.09618197149309!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c94de69be1cbdf%3A0x2b39fde94e671e!2sUluda%C4%9F%20%C3%9Cniversitesi%20%C4%B0neg%C3%B6l%20%C4%B0%C5%9Fletme%20Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1705600000000!5m2!1str!2str" 
                        width="100%" 
                        height="140" 
                        style="border:1px solid #444; border-radius: 8px; filter: invert(90%) hue-rotate(180deg);" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
            <hr class="footer-divider">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="footer-copyright mb-0">
                        &copy; @DateTime.Now.Year Premium Berber. Tüm hakları saklıdır.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    <!-- jQuery (if still needed) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
