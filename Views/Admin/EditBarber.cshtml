<!-- Bu sayfa berber düzenleme formudur. Sadece yöneticiler görebilir. -->
@model BerberRandevuSistemi.Models.Barber

@{
    ViewData["Title"] = "Berber Düzenle";
    Layout = "_AdminLayout";
}

<div class="admin-page-header mb-4">
    <h2>
        <span class="text-gold">
            <i class="bi bi-pencil-square me-2"></i>Berber Düzenle
        </span>
    </h2>
</div>

<div class="row">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
        <form asp-action="EditBarber" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-check form-switch mt-3 mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailable">
                <label class="form-check-label text-white">Bu berber şu an hizmet veriyor (Aktif)</label>
            </div>

            <div class="form-group mb-3">
                <label class="control-label d-block mb-2">Mevcut Resim</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.FullName" class="img-thumbnail mb-2" style="max-width: 150px;" />
                }
                
                <label class="control-label d-block">Yeni Resim Yükle</label>
                <input type="file" name="file" class="form-control" accept="image/*" />
            </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Kaydet
                    </button>
                    <a asp-action="Barbers" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>İptal
                    </a>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
