<!-- Bu sayfa kayıtlı tüm berberleri listeler. Sadece yöneticiler görebilir. -->
@model IEnumerable<BerberRandevuSistemi.Models.Barber>

@{
    ViewData["Title"] = "Berberler";
    Layout = "_AdminLayout";
}

<div class="admin-page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>
            <span class="text-gold">
                <i class="bi bi-person-badge me-2"></i>Berberler
            </span>
        </h2>
        <a asp-action="CreateBarber" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Yeni Berber Ekle
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Resim</th>
                            <th>Ad Soyad</th>

                            <th>Durum</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.FullName" class="table-img-thumbnail" />
                                    }
                                    else
                                    {
                                        <div class="table-img-placeholder">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    }
                                </td>
                                <td class="align-middle">
                                    <strong>@item.FullName</strong>
                                </td>

                                <td class="align-middle">
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Müsait
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle me-1"></i>Müsait Değil
                                        </span>
                                    }
                                </td>
                                <td class="align-middle text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="BarberDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="EditBarber" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DeleteBarber" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
            <i class="bi bi-person-x display-1 text-muted mb-3"></i>
            <h5 class="text-muted">Henüz berber eklenmemiş</h5>
            <p class="text-muted mb-4">İlk berberi eklemek için aşağıdaki butona tıklayın</p>
            <a asp-action="CreateBarber" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Yeni Berber Ekle
            </a>
        </div>
    </div>
}

<style>
    .table-img-thumbnail {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid var(--accent-gold);
    }

    .table-img-placeholder {
        width: 50px;
        height: 50px;
        background-color: var(--bg-card);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-gray);
        font-size: 1.5rem;
    }

    .table > tbody > tr {
        transition: var(--transition);
    }

    .table > tbody > tr:hover {
        background-color: rgba(197, 157, 95, 0.1);
    }

    .admin-page-header {
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border-color);
    }
</style>
