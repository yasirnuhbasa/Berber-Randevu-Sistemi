<!-- Bu sayfa yeni hizmet ekleme formudur. Sadece yöneticiler görebilir. -->
@model BerberRandevuSistemi.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
    Layout = "_AdminLayout";
}

<div class="admin-page-header mb-4">
    <h2>
        <span class="text-gold">
            <i class="bi bi-plus-circle me-2"></i>Yeni Hizmet Ekle
        </span>
    </h2>
</div>

<div class="row">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
        <form asp-action="CreateService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ServiceName" class="control-label text-white"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label text-white"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DurationMinutes" class="control-label text-white"></label>
                <input asp-for="DurationMinutes" class="form-control" type="number" min="1" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label text-white"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Kaydet
                    </button>
                    <a asp-action="Services" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>İptal
                    </a>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
