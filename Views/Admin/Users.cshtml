<!-- Kullanıcı yönetimi sayfası. Üyeleri listeler ve silme işlemi yapar. -->
<!-- Bu sayfa sistemdeki kayıtlı kullanıcıları listeler. Sadece yöneticiler görebilir. -->
@model IEnumerable<BerberRandevuSistemi.Models.User>

@{
    ViewData["Title"] = "Müşteriler";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="text-warning fw-bold"><i class="bi bi-people me-2"></i>Müşteriler</h2>
            <p class="text-white-50 mb-0">Kayıtlı üyeleri buradan yönetebilirsiniz.</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Single Card Container -->
    <div class="card shadow bg-dark text-white border-secondary">
        
        <!-- Card Body: Results Table -->
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0 align-middle">
                        <thead>
                            <tr class="text-white-50">
                                <th class="ps-3">Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Rol</th>
                                <th class="text-end pe-3">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle bg-secondary me-2 d-flex align-items-center justify-content-center rounded-circle" style="width:35px;height:35px;">
                                                <i class="bi bi-person text-white"></i>
                                            </div>
                                            <span class="fw-bold">@item.FullName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-white-50">@item.Email</span>
                                    </td>
                                    <td>
                                        <span class="text-white-50">@item.PhoneNumber</span>
                                    </td>
                                    <td>
                                        @if (item.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">Yönetici</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info text-dark">Üye</span>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        @if (item.Role != "Admin")
                                        {
                                            <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu kullanıcıyı ve tüm randevularını silmek istediğinize emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                                    <i class="bi bi-trash"></i> Sil
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-secondary mb-3 opacity-50"></i>
                    <h5 class="text-white">Kayıtlı kullanıcı yok</h5>
                </div>
            }
        </div>
    </div>
</div>
